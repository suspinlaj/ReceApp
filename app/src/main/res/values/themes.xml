<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecetasSusanaPineros" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RecetasSusanaPineros" parent="Base.Theme.RecetasSusanaPineros" />

    <!-- Fondo Pantallas General -->
    <style name="FondoPantallas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">"@drawable/fondo2"</item>
    </style>

    <!-- CHECK BOX -->
    <style name="CustomCheckBox" >
        <item name="checkboxStyle">@style/CustomCheckBox</item>
        <item name="android:textColor">@color/grisecito</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sunrise</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:buttonTint">@color/checkbox_colors</item>
    </style>

    <!-- Botones dobles -->
    <style name="BotonesPantallasDoble">
        <item name="android:fontFamily">@font/vanilla</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">25dp</item>
        <item name="strokeColor">@color/marroncito</item>
        <item name="strokeWidth">4dp</item>
    </style>
    <!-- Boton AZUL que hereda de Botones Dobles-->
    <style name="BotonAzul" parent="@style/BotonesPantallasDoble">
        <item name="android:backgroundTint">@color/azulito</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">56dp</item>
    </style>
    <!-- Boton AMARILLO que hereda de Botones Dobles-->
    <style name="BotonAmarillo" parent="@style/BotonesPantallasDoble">
        <item name="android:backgroundTint">@color/amarillito</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">155dp</item>
        <item name="android:layout_height">49dp</item>
    </style>


    <!-- Text View Receta TITULOS -->
    <style name="TextViewRecetaTitulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/sunrise</item>
        <item name="android:textColor">@color/marroncito</item>
    </style>

    <!-- Text View Receta RELLENABLE -->
    <style name="TextViewRecetaRellenable">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/sunrise</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grisecito</item>
        <item name="android:textSize">23sp</item>
    </style>


    <!-- Nombre Recetas PROGRESO -->
    <style name="NombreRecetas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Texto 1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/marroncito</item>
        <item name="android:fontFamily">@font/sunrise</item>
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <!-- Porcentajes tv -->
    <style name="PorcentajesStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0%</item>
        <item name="android:textColor">@color/grisecito</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginStart">52dp</item>
        <item name="android:fontFamily">@font/sunrise</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>