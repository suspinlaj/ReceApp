<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Progreso"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="422dp"
        android:layout_height="892dp"
        android:alpha="0.3"
        android:src="@drawable/fondo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TituloRecetas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coffee"
        android:textColor="#B8865B"
        android:text="Recetas"
        android:textSize="80sp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TituloRecetas1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coffee"
        android:textColor="#EDDF71"
        android:text="Recetas"
        android:textSize="80sp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombreReceta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tostadas de aguacate"
        android:textSize="30sp"
        android:textColor="#8E6746"
        android:fontFamily="@font/sunrise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/TituloRecetas1"  />

    <TextView
        android:id="@+id/tvNombreReceta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ensalada caprese"
        android:textSize="30sp"
        android:textColor="#8E6746"
        android:fontFamily="@font/sunrise"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1"
         />

    <TextView
        android:id="@+id/tvNombreReceta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Huevos revueltos\n con espinacas"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="@font/sunrise"
        android:layout_marginTop="40dp"
        android:textColor="#8E6746"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2"
         />

    <TextView
        android:id="@+id/tvNombreReceta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sándwich caliente\n de espinacas y huevo"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sunrise"
        android:clickable="true"
        android:textColor="#8E6746"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3"
         />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#A3DEE9"
        android:fontFamily="@font/vanilla"
        android:onClick="onClickInicio"
        android:text="Inicio"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@id/btnAtrasIngredientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#B8865B"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btnAtrasIngredientes"
        android:layout_width="155dp"
        android:layout_height="49dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#EDDF71"
        android:fontFamily="@font/vanilla"
        android:onClick="onClickAtras"
        android:text="Atrás"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#B8865B"
        app:strokeWidth="4dp" />


    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="294dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta1"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="466dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta2"/>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="584dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta3"/>

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="243dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="714dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta4"/>

</androidx.constraintlayout.widget.ConstraintLayout>