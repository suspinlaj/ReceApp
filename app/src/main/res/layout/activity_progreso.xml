<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Progreso"
    android:background="@drawable/fondo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="422dp"
        android:layout_height="892dp"
        android:alpha="0.3"
        android:src="@drawable/fondo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TituloRecetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recetas"
        android:textSize="70sp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombreReceta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Receta nº1"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/TituloRecetas"  />

    <TextView
        android:id="@+id/tvNombreReceta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Receta nº2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta1"
         />

    <TextView
        android:id="@+id/tvNombreReceta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Receta nº3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta2"
         />

    <TextView
        android:id="@+id/tvNombreReceta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Receta nº4"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta3"
         />

    <Button
        android:id="@+id/btnAtrasRecetas"
        android:layout_width="185dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:text="Atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreReceta4"
         />

</androidx.constraintlayout.widget.ConstraintLayout>