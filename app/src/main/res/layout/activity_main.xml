<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="422dp"
        android:layout_height="892dp"
        android:alpha="0.7"
        android:src="@drawable/fondo2"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/soda"
        android:text="App"
        android:textColor="#B8865B"
        android:textSize="126sp"
        android:translationX="6dp"
        android:layout_marginStart="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Rece" />

    <TextView
        android:id="@+id/App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/soda"
        android:text="App"
        android:textColor="#A3DEE9"
        android:textSize="120sp"
        android:translationX="3dp"
        android:layout_marginStart="105dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Rece" />

    <TextView
        android:id="@+id/Rece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/soda"
        android:text="Rece"
        android:textColor="#B8865B"
        android:textSize="124sp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/soda"
        android:text="Rece"
        android:textColor="#EDDF71"
        android:textSize="120sp"
        android:translationX="7dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecetas"
        android:layout_width="224dp"
        android:layout_height="75dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#EDDF71"
        android:fontFamily="@font/vanilla"
        android:onClick="onClickRecetas"
        android:text="Recetas"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/App"
        app:strokeColor="#B8865B"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btnIngredientes"
        android:layout_width="224dp"
        android:layout_height="75dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#A3DEE9"
        android:fontFamily="@font/vanilla"
        android:onClick="onClickIngredientes"
        android:text="Ingredientes"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecetas"
        app:strokeColor="#B8865B"
        app:strokeWidth="4dp" />


</androidx.constraintlayout.widget.ConstraintLayout>